#Watermelon problem

w=int(input("w "))
if w>2 and w%2==0:
  print("yes")
else:
  print("no")

#Way to long words prblm

no_of_words = int(input())
for _ in range(no_of_words):
    word = input().strip()
    if len(word) > 10:
        print(f"{word[0]}{len(word) - 2}{word[-1]}")
    else:
        print(word)
